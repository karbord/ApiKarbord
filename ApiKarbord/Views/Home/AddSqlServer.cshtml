@{
    ViewBag.Title = "تنظیمات دیتابیس";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@using (Ajax.BeginForm("AddSqlServer", "Home", ajaxOptions: new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "result" },
   routeValues: null, htmlAttributes: new { id = "loginsite", @class = "login-form" }))
{
    @Html.AntiForgeryToken()
<h3 class="login-head"><i class="fa fa-lg fa-fw fa-database"></i>تنظیمات دیتابیس</h3>
    <div class="form-group">
        <label class="control-label">نام سرور</label>
        @Html.TextBox("serverName", null, htmlAttributes: new { @class = "form-control", placeholder = "نام سرور", autofocus = "" })
    </div>
    <div class="form-group">
        <label class="control-label">نام کاربری</label>
        @Html.TextBox("userName", null, htmlAttributes: new { @class = "form-control", placeholder = "نام کاربری", autofocus = "" })
    </div>
    <div class="form-group">
        <label class="control-label">کلمه عبور</label>
        @Html.TextBox("password", null, htmlAttributes: new { @class = "form-control", type = "password", placeholder = "کلمه عبور", autofocus = "" })
    </div>
    <div class="form-group btn-container">
        <button type="submit" class="btn btn-primary btn-block"><i class="fa fa-sign-in fa-lg fa-fw"></i>ثبت</button>
    </div>
}
